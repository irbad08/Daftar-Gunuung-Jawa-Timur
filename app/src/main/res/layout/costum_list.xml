<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linear"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="5dp"
        android:layout_height="80dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iconid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_tambah_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rating"
            android:layout_alignLeft="@+id/rating"
            android:layout_marginLeft="10dp"
            android:text="NAMA"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/thumbnail_offline"
            android:layout_toRightOf="@+id/thumbnail_offline"
            android:text="Alamat"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
